{
  "name": "proxy-manager",
  "productName": "Proxy Manager",
  "version": "1.0.3",
  "description": "Proxy manager for windows, linux, mac",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\""
  },
  "keywords": [],
  "author": {
    "name": "dev-AshishRanjan",
    "email": "94990764+dev-AshishRanjan@users.noreply.github.com"
  },
  "license": "MIT",
  "dependencies": {
    "electron-settings": "^4.0.2",
    "electron-squirrel-startup": "^1.0.0",
    "toastify-js": "^1.12.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.2.0",
    "@electron-forge/publisher-github": "^7.2.0",
    "electron": "^28.1.3"
  },
  "build": {
    "appId": "com.ashish.proxy-manager",
    "productName": "Proxy Manager",
    "copyright": "Copyright Â© 2024 ${author}",
    "icon": "/public/icons/win/icon_512.ico",
    "mac": {
      "icon": "./public/icons/mac/icon_512.icns",
      "category": "public.app-category.developer_tools",
      "target": [
        "dmg",
        "mas",
        "zip"
      ]
    },
    "win": {
      "icon": "./public/icons/win/icon_512.ico"
    },
    "files": [
      "./build/**/*",
      "./dist/**/*",
      "./node_modules/**/*",
      "./public/**/*",
      "*.js"
    ],
    "linux": {
      "category": "Developer_tools",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "directories": {
      "buildResources": "public"
    }
  }
}
